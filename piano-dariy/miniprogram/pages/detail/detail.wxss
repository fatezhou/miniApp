/* miniprogram/pages/detail/detail.wxss */
@import "./../../ali-css/iconfont.wxss";

.root{
  border: 1px solid black;
  border-radius: 3px;
  margin: 10rpx;
  display: flex;
  flex-direction: column;
}

.avater{
  font-size: 350%
}

.header{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name-time{
  display: flex;
  flex-direction: column;
}

.time-view{
  border: 1px dotted black;
}

.line{
  border: 1px solid black;
  height: 0px;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.title-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title-head{
  font-size: 100%;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.title-text-view{
  margin-left: 30rpx;
  font-size: 120%;
  border-bottom: 1px dotted black;
}